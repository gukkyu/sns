<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sns.follower.mapper.FollowerMapper">
    <select id="followCount" resultType="int">
        SELECT
            COUNT(*)
        FROM
            `follower`
        WHERE
            `followerId` = #{postId}
    </select>
    <select id="isFollow" parameterType="map" resultType="boolean">
        SELECT
            COUNT(*)
        FROM
            `follower`
        WHERE
            `followerId` = #{postId}
        AND
            `userId` = #{userId}
    </select>
    <insert id="insertFollow" parameterType="map">
        INSERT INTO
            `follower`
        (
            `followerId`,
            `userId`,
            `createdAt`
        )
        VALUES
        (
            #{postId},
            #{userId},
            NOW()
        )
    </insert>

    <delete id="deleteFollow" parameterType="map">
        DELETE FROM `follower`
        WHERE
            `followerId` = #{postId}
        AND
            `userId` = #{userId}
    </delete>
</mapper>